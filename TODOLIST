select * from a;
+----+-----+-----+
| id | aid | bid |
+----+-----+-----+
|  1 |   1 |   1 |
|  2 |   2 |   2 |
+----+-----+-----+
select * from b;
+----+-----+-----+-----+
| id | aid | bid | cid |
+----+-----+-----+-----+
|  1 |   1 |   1 |   1 |
|  2 |   1 |   1 |   2 |
|  3 |   2 |   2 |   3 |
+----+-----+-----+-----+

select aid,bid,count(*) from b where exists (select aid,bid from a where aid=b.aid and bid=b.bid) group by aid,bid;
+-----+-----+----------+
| aid | bid | count(*) |
+-----+-----+----------+
|   1 |   1 |        2 |
|   2 |   2 |        1 |
+-----+-----+----------+

